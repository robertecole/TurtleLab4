import turtle

def draw_star(length):  
    #draws star with the given length of each arm using a multi-alternative if structure
    if length > 0:  
        for _ in range(5): 
            turtle.forward(length)
            turtle.right(144)
    else:
        print("Length must be greater than zero.")

def get_lengths():  
    #asks the user for the lengths of each arm of the stars with a list
    lengths = [] 
    for _ in range(2):
        length = float(input("Enter the length of each arm of the star: "))  
        lengths.append(length) 
    return lengths
